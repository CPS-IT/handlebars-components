{
	"name": "fr/typo3-handlebars-components",
	"description": "Additional components for the TYPO3 CMS extension \"handlebars\"",
	"license": "GPL-2.0-or-later",
	"type": "typo3-cms-extension",
	"authors": [
		{
			"name": "Elias Häußler",
			"email": "e.haeussler@familie-redlich.de",
			"homepage": "https://www.familie-redlich.de",
			"role": "Maintainer"
		}
	],
	"require": {
		"php": "^7.1 || 8.0.*",
		"cpsit/typo3-handlebars": "^0.7",
		"psr/http-message": "^1.0",
		"psr/log": "^1.0 || ^2.0 || ^3.0",
		"symfony/finder": "^4.4 || ^5.0",
		"symfony/polyfill-php80": "^1.23",
		"typo3/cms-core": "^10.4 || ^11.5",
		"typo3/cms-extbase": "^10.4 || ^11.5",
		"typo3/cms-frontend": "^10.4 || ^11.5"
	},
	"require-dev": {
		"apache-solr-for-typo3/solr": "^11.5@RC",
		"armin/editorconfig-cli": "^1.5",
		"ergebnis/composer-normalize": "^2.15",
		"helmich/typo3-typoscript-lint": "^2.5",
		"jangregor/phpstan-prophecy": "^1.0",
		"phpspec/prophecy-phpunit": "^2.0",
		"phpstan/phpstan": "^1.3",
		"phpstan/phpstan-phpunit": "^1.0",
		"phpunit/phpcov": "^8.2",
		"phpunit/phpunit": "^9.3",
		"saschaegerer/phpstan-typo3": "^1.0",
		"typo3/coding-standards": "^0.5.0",
		"typo3/testing-framework": "^6.11.2"
	},
	"autoload": {
		"psr-4": {
			"Fr\\Typo3HandlebarsComponents\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Fr\\Typo3HandlebarsComponents\\Tests\\": "Tests/",
			"Fr\\Typo3HandlebarsComponentsTestExtension\\": "Tests/Functional/Fixtures/test_extension/Classes/",
			"Fr\\Typo3Handlebars\\Tests\\": ".Build/web/typo3conf/ext/handlebars/Tests"
		}
	},
	"config": {
		"allow-plugins": {
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true,
			"ergebnis/composer-normalize": true
		},
		"bin-dir": ".Build/bin",
		"preferred-install": {
			"cpsit/typo3-handlebars": "source",
			"*": "dist"
		},
		"sort-packages": true,
		"vendor-dir": ".Build/vendor"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "handlebars_components",
			"web-dir": ".Build/web"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"mkdir -p .Build/web/typo3conf/ext/",
			"[ -L .Build/web/typo3conf/ext/handlebars_components ] || ln -snvf ../../../../. .Build/web/typo3conf/ext/handlebars_components"
		],
		"lint": [
			"@lint:editorconfig",
			"@lint:php",
			"@lint:typoscript"
		],
		"lint:editorconfig": "ec --fix --git-only",
		"lint:php": "php-cs-fixer fix",
		"lint:typoscript": "typoscript-lint -c typoscript-lint.yml",
		"sca": [
			"@sca:php"
		],
		"sca:php": "phpstan analyse -c phpstan.neon",
		"test": [
			"@test:functional",
			"@test:unit"
		],
		"test:ci": [
			"@test:ci:functional",
			"@test:ci:unit"
		],
		"test:ci:functional": "phpunit -c phpunit.ci.functional.xml",
		"test:ci:merge": "phpcov merge --html .Build/log/coverage/html/_merged --text php://stdout .Build/log/coverage/php",
		"test:ci:unit": "phpunit -c phpunit.ci.unit.xml",
		"test:functional": "phpunit -c phpunit.functional.xml",
		"test:unit": "phpunit -c phpunit.unit.xml"
	}
}

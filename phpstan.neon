includes:
    - phpstan-baseline.neon
    - .Build/vendor/phpstan/phpstan-phpunit/extension.neon
    - .Build/vendor/saschaegerer/phpstan-typo3/extension.neon
parameters:
    bootstrapFiles:
        - .Build/vendor/typo3/testing-framework/Resources/Core/Build/UnitTestsBootstrap.php
    level: 6
    paths:
        - Classes
        - Configuration
        - Tests
    ignoreErrors:
        - message: '#^Variable \$_EXTKEY might not be defined\.$#'
          path: Tests/Functional/Fixtures/test_extension/ext_emconf.php
